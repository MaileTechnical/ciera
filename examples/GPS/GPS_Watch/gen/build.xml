<project name="GPS_Watch" default="all" basedir=".">

  <description>
    Builds the GPS Watch application
  </description>

  <property name="antlr-loc" value="../../../../release"/>
  <property name="antlr-version" value="4.7.1"/>

  <target name="all" depends="gps"/>

  <target name="gps" description="generate the GPS Watch application">
    <jar jarfile="GPS_Watch.jar">
      <fileset dir="../bin"/>
      <fileset dir="../../../../src/io.ciera.runtime/bin"/>
      <zipfileset includes="**/*.class" src="${antlr-loc}/antlr-${antlr-version}-complete.jar"/>
      <zipfileset includes="**/*" src="../../../../release/json-20180813.jar"/>
      <manifest>
        <attribute name="Main-Class" value="gps_watch.GPS_WatchApplication"/>
      </manifest>
    </jar>
  </target>

</project>
